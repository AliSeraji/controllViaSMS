<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SMSController" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mid_purple</item>
        <item name="colorPrimaryVariant">@color/dark_purple</item>
        <item name="colorOnPrimary">@color/light_black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray</item>
        <item name="colorSecondaryVariant">@color/creme</item>
        <item name="colorOnSecondary">@color/light_brown</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnSecondary</item>
        <item name="android:textColor" >@color/white</item>


        <!-- Customize your theme here. -->
    </style>
    <style name="darkActionbar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="background">?attr/colorOnPrimary</item>
        <item name="titleTextColor">?attr/colorSecondary</item>
        <item name="android:textSize">30dp</item>
        <item name="title">@string/app_name</item>
    </style>

    <style name="textInputLabel" parent="Theme.MaterialComponents">
        <item name="boxBackgroundColor">@color/light_black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="boxStrokeColor">@color/white</item>
    </style>

    <style name="textInputStyle" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="android:backgroundTint">@color/light_black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="floatingBtnStyle" parent="Theme.MaterialComponents">
        <item name="android:backgroundTint">?attr/colorSecondaryVariant</item>
        <item name="rippleColor">?attr/colorPrimary</item>
        <item name="tint">?attr/colorPrimary</item>
    </style>

    <style name="customActionbar" parent="Theme.MaterialComponents">
        <item name="android:textSize">20sp</item>
        <item name="android:background">?attr/colorOnSecondary</item>
        <item name="android:textColor">@color/creme</item>
    </style>
    <style name="recyclerItem" parent="Theme.MaterialComponents">
        <item name="android:background">?attr/colorOnSecondary</item>
    </style>

    <style name="message_item_style" parent="Theme.MaterialComponents">
        <item name="android:color">?attr/colorOnSecondary</item>
    </style>


</resources>