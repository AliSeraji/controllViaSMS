<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SMSController" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mid_purple</item>
        <item name="colorPrimaryVariant">@color/dark_purple</item>
        <item name="colorOnPrimary">@color/light_black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray</item>
        <item name="colorSecondaryVariant">@color/creme</item>
        <item name="colorOnSecondary">@color/light_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:actionBarStyle">@style/darkActionbar</item>
        <item name="android:textColor" >@color/white</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="darkActionbar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="background">?attr/colorPrimaryVariant</item>
        <item name="titleTextColor">?attr/colorSecondary</item>
        <item name="title">@string/app_name</item>
    </style>
</resources>