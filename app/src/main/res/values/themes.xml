<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SMSController" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:actionBarStyle">@style/lightActionBar</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="lightActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="background">?attr/colorPrimaryVariant</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="title">@string/app_name</item>
    </style>

</resources>