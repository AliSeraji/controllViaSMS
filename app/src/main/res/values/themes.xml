<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SMSController" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mid_blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/creme</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue</item>
        <item name="colorSecondaryVariant">@color/gray</item>
        <item name="colorOnSecondary">@color/light_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/black</item>

        <!-- Customize your theme here. -->
    </style>
    <style name="lightActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="background">?attr/colorPrimaryVariant</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="title">@string/app_name</item>
    </style>

    <style name="textInputLabel" parent="Theme.MaterialComponents">
       <item name="boxBackgroundColor">@color/light_black</item>
       <item name="android:textColorHint">@color/gray</item>
       <item name="boxStrokeColor">@color/light_black</item>
    </style>

    <style name="textInputStyle" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="floatingBtnStyle" parent="Theme.MaterialComponents">
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="rippleColor">?attr/colorOnPrimary</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="customActionbar" parent="Theme.MaterialComponents">
        <item name="android:textSize">20sp</item>
        <item name="android:background">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/creme</item>
    </style>


</resources>